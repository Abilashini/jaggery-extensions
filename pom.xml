<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <groupId>org.jaggeryjs</groupId>
    <artifactId>jaggery-extensions</artifactId>
    <version>1.1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <name>Jaggery Extensions</name>
    <url>https://github.com/wso2/jaggery</url>
    <description>Jaggery Extensions</description>

    <modules>
        <module>markdown</module>
        <module>handlebars</module>
        <module>carbon</module>
        <module>email</module>
        <module>i18n</module>
        <module>oauth</module>
        <module>process</module>
        <module>gadget</module>
        <module>uuid</module>
        <module>ws</module>
        <module>sso</module>
        <module>jaggery-test</module>
    </modules>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 Internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>wso2.snapshots</id>
            <name>WSO2 Snapshot Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>${maven-wagon-ssh.version}</version>
            </extension>
        </extensions>
    </build>

    <properties>
        <maven-wagon-ssh.version>2.1</maven-wagon-ssh.version>
    </properties>

</project>
